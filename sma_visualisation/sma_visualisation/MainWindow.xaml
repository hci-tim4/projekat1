<Window x:Class="sma_visualisation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sma_visualisation"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"
        Height="{x:Static SystemParameters.PrimaryScreenHeight}"
       
    Title="SMA Visualization"
         Icon="C:\Users\Anastasija\Desktop\hci1-tim4\sma_visualisation\sma_visualisation\resources\graphic.png">
    <Grid x:Name="app" Background="#BAB2B5">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="7*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>

        </Grid.RowDefinitions>
        <!--
        <Grid.Resources>
            <local:EmployeeCollection x:Key="EmployeesCollection" />
        </Grid.Resources>

    -->
        <!-- Scatter Chart 
        <DVC:Chart Canvas.Top="80" Canvas.Left="10" Name="mcChart" 
           Width="400" Height="250"
           Background="LightSteelBlue">
            <DVC:Chart.Series>
                <DVC:ScatterSeries Title="Dots" 
    		IndependentValueBinding="{Binding Path=Key}"
    		DependentValueBinding="{Binding Path=Value}">
                </DVC:ScatterSeries>
            </DVC:Chart.Series>
        </DVC:Chart>    -->

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="2,2,2,2">
            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="2,2,2,2" >
                <Border BorderBrush="#373737" BorderThickness="2">

                    <Grid Background="#EDC7B7">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>




                        <Label Grid.Row="0" Grid.Column="0" Content="Symbol:" />
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="symbol_tb"  />


                        <Label Content="Interval:" Margin="0,2,0,2" Grid.Row="1" Grid.Column="0"/>
                        <ComboBox x:Name="interval_cb" Grid.Row="1" Grid.Column="1" >
                            <ComboBoxItem>1min</ComboBoxItem>
                            <ComboBoxItem>5min</ComboBoxItem>
                            <ComboBoxItem>15min</ComboBoxItem>
                            <ComboBoxItem>30min</ComboBoxItem>
                            <ComboBoxItem>60min</ComboBoxItem>
                            <ComboBoxItem>daily</ComboBoxItem>
                            <ComboBoxItem>weekly</ComboBoxItem>
                            <ComboBoxItem>monthly</ComboBoxItem>
                        </ComboBox>


                        <Label Content="Time period:" Margin="0,2,0,2" Grid.Row="2" Grid.Column="0" />
                        <DockPanel  Grid.Row="2" Grid.Column="1" >
                            <TextBox Width="22" Text="{Binding ElementName=timePeriodSlider, Path=Value, Mode =TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={local:IntToStringConverter}}"></TextBox>
                            <Slider x:Name="timePeriodSlider" Minimum="1" Maximum="200" ></Slider>

                        </DockPanel>


                        <Label Content="Series type:" Margin="0,2,0,2" Grid.Row="3" Grid.Column="0"/>
                        <ComboBox x:Name="series_type_cb" Grid.Row="3" Grid.Column="1" >
                            <ComboBoxItem>close</ComboBoxItem>
                            <ComboBoxItem>open</ComboBoxItem>
                            <ComboBoxItem>high</ComboBoxItem>
                            <ComboBoxItem>low</ComboBoxItem>
                        </ComboBox>

                        <Label Content="Interval prikaza:" Margin="0,2,0,2" Grid.Row="4" Grid.Column="0"/>
                        <ComboBox x:Name="interval_view_cb" Grid.Row="4" Grid.Column="1" >
                            <ComboBoxItem>one year</ComboBoxItem>
                            <ComboBoxItem>two years</ComboBoxItem>
                            <ComboBoxItem>three years</ComboBoxItem>
                            <ComboBoxItem>all</ComboBoxItem>
                        </ComboBox>

                        <Button Click="show_btn_Click" Grid.Row="5" Grid.Column="1" Background="#AC3B61" x:Name="show_btn" Content="Show" Grid.RowSpan="5"/>

                    </Grid>
                </Border>

            </StackPanel>



            <StackPanel x:Name="DisplaySection" VerticalAlignment="Top" Margin="2,2,2,2" Grid.Row="2" Grid.ColumnSpan="2" DataContext="Data" Background="#EEE2DC" >
                <Border BorderBrush="#373737" BorderThickness="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Label Content="The lateast selected choices" HorizontalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2" />

                        <Label Content="Symbol: " Grid.Row="1" Grid.Column="0" Margin="0,2,0,2" />
                        <Label  x:Name="symbol_label" Grid.Row="1" Grid.Column="1" Margin="0,2,0,2"/>

                        <Label Content="Interval: " Grid.Row="2" Grid.Column="0" Margin="0,2,0,2" />
                        <Label  x:Name="interval_label"  Grid.Row="2" Grid.Column="1" Margin="0,2,0,2"/>

                        <Label Content="Time period: " Grid.Row="3" Grid.Column="0"  Margin="0,2,0,2"/>
                        <Label x:Name="time_period_label"  Grid.Row="3" Grid.Column="1" Margin="0,2,0,2"/>

                        <Label Content="Function: " Grid.Row="4" Grid.Column="0" Margin="0,2,0,2" />
                        <Label x:Name="function_label"  Grid.Row="4" Grid.Column="1" Margin="0,2,0,2"/>

                        <Label Content="Last refreshed date: " Grid.Row="5" Grid.Column="0" Margin="0,2,0,2" />
                        <Label x:Name="last_refreshed_date_label"  Grid.Row="5" Grid.Column="1" Margin="0,2,0,2"/>

                        <Label Content="Interval view: " Grid.Row="6" Grid.Column="0"  Margin="0,2,0,2"/>
                        <Label x:Name="interval_view_label"  Grid.Row="6" Grid.Column="1" Margin="0,2,0,2"/>

                        <Label Content="Series type: " Grid.Row="7" Grid.Column="0" Margin="0,2,0,2" />
                        <Label x:Name="series_type_label"  Grid.Row="7" Grid.Column="1" Margin="0,2,0,2"/>

                    </Grid>

                </Border>
            </StackPanel>
        </StackPanel>

        

    </Grid>
</Window>
